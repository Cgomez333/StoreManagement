@{
    ViewData["Title"] = "Gestión de Inventario";
}

<!-- AOS CSS -->
<link href="https://unpkg.com/aos@next/dist/aos.css" rel="stylesheet" />
<style>
    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, color 0.3s ease;
    }

    .hover-shadow:hover {
        transform: scale(1.03);
        box-shadow: 0 1rem 1.5rem rgba(0, 0, 0, 0.15);
        background: linear-gradient(to right, #082B53, #2D779A);
        color: white;
    }

    .hover-shadow:hover * {
        color: #fff !important;
    }

    .hover-shadow:hover .gradient-text {
        background: white;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<section class="py-5 bg-light rounded-3 shadow-sm">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-down">
            <h2 class="fw-bold">Panel de Gestión</h2>
            <p class="text-muted fs-5">Administra las diferentes secciones del inventario desde un solo lugar.</p>
        </div>

        <div class="row g-4">
            <!-- Productos -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <a asp-controller="Product" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-box fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Productos</h5>
                        <p class="text-muted fs-6">Visualiza, edita y administra el catálogo completo de productos.</p>
                    </div>
                </a>
            </div>

            <!-- Categorías -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="150">
                <a asp-controller="Category" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-tags fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Categorías</h5>
                        <p class="text-muted fs-6">Organiza tus productos por categorías para una gestión eficiente.</p>
                    </div>
                </a>
            </div>

            <!-- Proveedores -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <a asp-controller="Supplier" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-truck fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Proveedores</h5>
                        <p class="text-muted fs-6">Administra información de proveedores y relaciones comerciales.</p>
                    </div>
                </a>
            </div>

            <!-- Movimientos -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="250">
                <a asp-controller="InventoryMovement" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-arrow-left-right fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Movimientos</h5>
                        <p class="text-muted fs-6">Consulta entradas, salidas y ajustes de inventario en tiempo real.</p>
                    </div>
                </a>
            </div>

            <!-- Ventas -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <a asp-controller="Sale" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-cart fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Ventas</h5>
                        <p class="text-muted fs-6">Gestiona las ventas en tiempo real.</p>
                    </div>
                </a>
            </div>

            <!-- Dashboard -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="350">
                <a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-bar-chart fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Dashboard</h5>
                        <p class="text-muted fs-6">Consulta estadísticas en tiempo real sobre tu tienda.</p>
                    </div>
                </a>
            </div>

            <!-- Cliente -->
            <div class="col-md-4 mx-auto" data-aos="fade-up" data-aos-delay="450">
                <a asp-controller="Customer" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 rounded-3 text-center p-4 hover-shadow">
                        <i class="bi bi-person-circle fs-1 gradient-text mb-3"></i>
                        <h5 class="fw-semibold">Cliente</h5>
                        <p class="text-muted fs-6">Gestiona la información sobre tus clientes.</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- AOS JS -->
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
    AOS.init();
</script>