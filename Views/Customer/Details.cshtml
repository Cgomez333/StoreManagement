@model StoreManagement.Models.Customer

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="mb-5">
    <h1>Detalles del Cliente</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Correo Electrónico</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@Model.Phone</dd>
        </dl>
        <hr />
    </div>
</div>

<div class="text-center">
    <a class="btn gradient-bg text-light" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>
