@model StoreManagement.Models.Customer

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="mb-5">
    <h1 class="mb-4">Editar Cliente</h1>

    <div class="container">
        <div class="card shadow rounded-4">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre</label>
                        <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del cliente" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Ingrese el email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Teléfono</label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese el teléfono" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn gradient-bg text-light">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
