@model StoreManagement.Models.Customer

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="mb-5">
    <h1 class="mb-4">Eliminar Cliente</h1>

    <div class="container">
        <div class="card shadow rounded-4">
            <div class="card-body p-4">
                <h4>¿Estás seguro de que deseas eliminar este cliente? <strong class="text-danger">Esta acción es irreversible.</strong></h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Correo Electrónico</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Teléfono</dt>
                    <dd class="col-sm-9">@Model.Phone</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
