@model StoreManagement.Models.Sale

@{
    ViewData["Title"] = "Detalles de la venta";
}

<div class="mb-5">
    <h1>Detalles de la Venta</h1>

    <hr />
    <dl class="row mb-4">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10"><i class="bi bi-calendar2-check pe-2"></i>@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">
            <i class="bi bi-person pe-2"></i>@Model.Customer?.Name <strong>(ID: @Model.Customer?.Id)</strong>
        </dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CO"))
        </dd>
    </dl>

    <h2>Productos</h2>
    <table class="table table-striped mb-4">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.SaleDetails)
            {
                <tr>
                    <td>@(detail.Product?.Name ?? detail.ProductId.ToString())</td>
                    <td>@detail.Quantity</td>
                    <td>
                        @detail.UnitPrice.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CO"))
                    </td>
                    <td>
                        @detail.Subtotal?.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CO"))
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn gradient-bg text-white me-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
