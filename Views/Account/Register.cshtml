@model StoreManagement.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrar usuario";
}

<div class="mb-5 d-flex justify-content-center">
    <div class="card shadow rounded-4" style="max-width: 480px; width: 100%;">
        <div class="card-header gradient-bg text-white">
            <h4 class="m-2">Crear Cuenta</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo electrónico</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn gradient-bg text-white px-4">
                        <i class="bi bi-person-plus-fill me-1"></i>Registrarse
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            ¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
