@model StoreManagement.Models.InventoryMovement

@{
    ViewData["Title"] = "Detalles del Movimiento";
}

<h1>Detalles del Movimiento</h1>

<div class="card shadow rounded-4 p-4">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Motivo</dt>
        <dd class="col-sm-10">@Model.Reason</dd>
    </dl>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
    </div>
</div>