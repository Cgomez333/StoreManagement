@model IEnumerable<StoreManagement.Models.InventoryMovement>

@{
    ViewData["Title"] = "Movimientos de Inventario";
}

<h1>Movimientos de Inventario</h1>

<table class="table table-striped table-bordered align-middle my-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Motivo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Type</td>
                <td>@item.Reason</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<a class="btn text-light gradient-bg" asp-action="Create">Registrar Movimiento</a>
