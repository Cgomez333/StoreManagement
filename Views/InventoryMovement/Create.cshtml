@model StoreManagement.Models.InventoryMovement

@{
    ViewData["Title"] = "Registrar Movimiento";
}

<h1>Registrar Movimiento de Inventario</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        <ul>
            @foreach (var entry in ViewData.ModelState)
            {
                foreach (var error in entry.Value.Errors)
                {
                    <li><strong>@entry.Key:</strong> @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


<div class="card shadow rounded-4 p-4">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">Producto</label>
            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId">
                <option value="">-- Seleccione un producto --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Cantidad</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label">Tipo</label>
            <select asp-for="Type" class="form-select">
                <option value="IN">IN</option>
                <option value="OUT">OUT</option>
            </select>
            <span asp-validation-for="Type" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Motivo</label>
            <input asp-for="Reason" class="form-control" />
            <span asp-validation-for="Reason" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn gradient-bg text-light">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}