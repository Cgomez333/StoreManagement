@model StoreManagement.Models.Category

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<div class="mb-5">
    <h1>Detalles de la Categoría</h1>

    <div class="container">
        <div class="card shadow rounded-4">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-2">ID</dt>
                    <dd class="col-sm-10">@Model.Id</dd>

                    <dt class="col-sm-2">Nombre</dt>
                    <dd class="col-sm-10">@Model.Name</dd>
                </dl>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
